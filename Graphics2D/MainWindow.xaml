<Window x:Class="Graphics2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphics2D"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.ColumnSpan="2">请选择您要演示的功能</TextBlock>
        <Button x:Name="btnToFloodFill"  Margin="10" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="100" MinHeight="100" Click="btnToFloodFill_Click" />
        <Button x:Name="btnToDrawLine" Grid.Column="1"  Margin="10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="100" MinHeight="100" >
        </Button>



    </Grid>
</Window>
