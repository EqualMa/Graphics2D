<Page x:Class="Graphics2D.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Graphics2D"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.ColumnSpan="2" FontSize="20">请选择您要演示的功能</TextBlock>
        <Button x:Name="btnToFloodFill"  Margin="10" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="150" MinHeight="100" Click="btnToFloodFill_Click" Content="简单种子点填充算法" FontSize="14" />
        <Button x:Name="btnToDrawLine" Grid.Column="1"  Margin="10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="150" MinHeight="100" Content="Bresenham画线算法" FontSize="14" Click="btnToDrawLine_Click" />
    </Grid>
</Page>
